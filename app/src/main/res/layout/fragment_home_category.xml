<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_category_background"
    android:gravity="center">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_banner_height"
        android:layout_marginBottom="@dimen/margin_home_banner"
        android:background="@color/home_category_background"
        app:banner_infinite_loop="true"
        app:banner_indicator_selected_color="@color/main_theme" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/home_title_padding"
        android:drawablePadding="@dimen/home_title_padding"
        android:drawableLeft="@drawable/shape_home_title_flag"
        android:drawableRight="@drawable/shape_home_title_flag"
        android:background="@color/home_category_background"
        android:textSize="@dimen/home_title_size"
        android:textColor="@color/main_theme" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/home_rv_margin"
        android:overScrollMode="never"
        android:background="@color/home_category_background" />

</LinearLayout>