<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/small_padding"
    android:paddingBottom="@dimen/small_padding"
    android:paddingLeft="@dimen/small_padding"
    android:paddingRight="@dimen/small_padding"
    android:gravity="center_vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/content_item_size"
        android:layout_height="@dimen/content_item_size"
        android:scaleType="centerCrop"
        tools:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/content_title_text_size"
            android:textStyle="bold"
            tools:text="我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/content_tmall_padding"
            android:layout_marginTop="@dimen/content_tmall_margin"
            android:background="@drawable/shape_content_tmall"
            android:textColor="@color/white"
            android:textSize="@dimen/content_tmall_text_size"
            tools:text="省15元" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_tmall_margin"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_theme"
                android:text="@string/content_item_off_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:textColor="@color/main_theme"
                tools:text="19.8元" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:textColor="@color/gray"
                tools:text="￥23" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_buy_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:textColor="@color/gray"
                tools:text="1000人购买" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>